<div class="container">
	<h1>Productos</h1>
	<div class="text-right">
		<%= link_to "Nuevo product", new_product_path, class:"btn btn-primary" %>
	</div>
	<table class="table">
		<tr>
			<th>Nombre</th>
			<th>URL</th>
			<th>Description</th>
		</tr>
		<% @products.each do |product| %>
			<tr>
				<td><%= product.name %></td>
				<td><%= product.url %></td>
				<td><%= product.description %></td>
				<td><%= link_to 'Mostrar', product%></td>
			</tr>
		<% end %>
	</table>
</div>
